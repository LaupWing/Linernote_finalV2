<div class="filter-btn">
    <img src="/img/filter.png" alt="">
</div>
<div class="filter-screen">
    <h2>Filter</h2>
    <div class="sort">
        <h3>Sort by</h3>
        <div class="by">
            <div class="input-wrapper">
              <input type="radio" id="recent" name="by" value="recent"
              checked>
              <label for="recent">Most Recent</label>
            </div>
            <div class="input-wrapper">
                <input type="radio" id="Alphabetic" name="by" value="alphabetic">
                <label for="alphabetic">Alphabetic Platform</label>
            </div>
        </div>
        <div class="order">
            <div class="input-wrapper">
                <input type="radio" id="highFirst" name="order" value="highFirst" checked>
                <label for="highFirst">High to Low</label>
            </div>
            <div class="input-wrapper">
                <input type="radio" id="lowFirst" name="order" value="lowFirst">
                <label for="lowFirst">Low to High</label>
            </div>
        </div>
    </div>
    <div class="keywords">
        <h3>Keywords</h3>
        <% mediaBtns.forEach(btn=>{ %>
            <button class="active"><%= btn %></button>
        <% }) %>
    </div>
</div>
