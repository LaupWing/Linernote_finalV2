<div class="filter-btn">
    <img src="/img/filter.png" alt="">
</div>
<div class="filter-screen">
    <h2>Filter</h2>
    <div class="sort">
        <h3>Sort by</h3>
        <div class="by">
            <div class="input-wrapper">
              <input type="radio" id="recent" name="by" value="recent"
              checked>
              <label for="recent">Most Recent</label>
            </div>
            <div class="input-wrapper">
                <input type="radio" id="oldest" name="by" value="oldest">
                <label for="oldest">Oldest</label>
            </div>
        </div>
    </div>
    <div class="keywords">
        <h3>Keywords</h3>
        <% mediaBtns.forEach(btn=>{ %>
            <% if(btn!=='img'|| btn !== 'artist') {%>
                <button class="active"><%= btn %></button>
            <% } %>    
        <% }) %>
    </div>
    <p class="reset">Reset settings</p>
</div>
